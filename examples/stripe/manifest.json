{
  "name": "Stripe for Gmail",
  "description": "Show Stripe customer information in Gmail",
  "version": "0.2",
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://inbox.google.com/*"
      ],
      "js": ["inboxsdk.js","app.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "https://mail.google.com/",
    "https://inbox.google.com/",
    "https://*.stripe.com/",
    "https://code.jquery.com/"
  ],
  "web_accessible_resources": [
    "stripe.png",
    "paid.png",
    "unpaid.png",
    "cards/*",
    "templates.html"
  ],
  "manifest_version": 2
}
